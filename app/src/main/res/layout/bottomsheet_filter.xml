    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bottomSheet_filer_rv_MainComponents"
        android:layout_width="wrap_content"
        android:layout_below="@id/filter_toolbar_layput"
        android:background="@color/file_bg_color"
        android:layout_above="@+id/savecancel_ll"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bottomSheet_filer_rv_data_Components"
        android:layout_width="match_parent"
        android:layout_below="@id/filter_toolbar_layput"
        android:layout_above="@+id/savecancel_ll"
        android:layout_toRightOf="@id/bottomSheet_filer_rv_MainComponents"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/savecancel_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bottomsheet_filter_Cancel_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:text="Cancel"
            android:textColor="@color/text_black"
            android:backgroundTint="@color/text_white"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:id="@+id/bottomsheet_filter_apply_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:textColor="@color/text_white">
        </Button>
    </LinearLayout>
